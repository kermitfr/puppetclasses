# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# User specific environment and startup programs

export JBOSS_HOME=/opt/jboss/jboss-<%= jbossver %>
export JAVA_HOME=/usr/lib/jvm/jre-1.6.0-openjdk.x86_64
export PATH=$PATH:$HOME/bin:$JAVA_HOME/bin:$JBOSS_HOME/bin
